{
  "permissions": {
    "allow": [
      "Bash(flutter analyze:*)",
      "Bash(flutter pub get:*)",
      "Bash(flutter pub upgrade:*)",
      "Bash(flutter build:*)",
      "Bash(flutter run:*)",
      "Bash(dart fix:*)",
      "Bash(dart format:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git checkout:*)",
      "Bash(git push:*)",
      "Bash(git log:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(tree:*)",
      "Bash(find:*)",
      "Bash(ls:*)",
      "Bash(mise install:*)",
      "Bash(mise run:*)",
      "WebFetch(domain:pub.dev)",
      "WebFetch(domain:api.flutter.dev)",
      "WebFetch(domain:github.com)",
      "WebSearch"
    ],
    "deny": [
      "Read(.env)",
      "Read(.env.*)",
      "Read(secrets/**)",
      "Read(**/*credentials*)",
      "Read(**/*secret*)",
      "Bash(rm -rf:*)",
      "Bash(git push --force:*)",
      "Bash(git reset --hard:*)"
    ]
  }
}
